<div class="card bg-light mb-3">
  <div class="card-body">
    <h4> <%= link_to post.title, post %> </h4>
    <div class="text-muted">
      <em> Por <%= post.user.username %> (<%= I18n.l post.created_at, format: :long %>) </em>
    </div>
    <p class="mt-4"> <%= post.body.truncate(200) %> </p>
    <p class="text-muted"><%= pluralize(post.comments.count, 'ComentÃ¡rio') %></p>

    <% if request.path == post_path(post) %>
      <% if user_signed_in? && current_user == post.user %>
        <%= link_to "Editar", edit_post_path(post), class: 'btn btn-secondary' %>
        <%= link_to "Apagar", post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Deseja apagar o post?' } %>
      <% end %>
    <% else %>
      <%= link_to "Ler Artigo", post, class: 'btn btn-primary' %>
    <% end %>
  </div>

  <% if request.path == post_path(post) %>
    <%= link_to "Voltar para os posts", root_path, class:'ms-4 mb-2' %>

  <% end %>

  
</div>
