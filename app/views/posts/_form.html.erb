<%= form_with(model: post) do |form| %>

  <div class="form-group">
    <%= form.label :author, t('activerecord.attributes.post.author'), style: "display: block" %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :body, t('activerecord.attributes.post.body'), style: "display: block" %>
    <%= form.text_area :body, class: 'form-control', rows: 15 %>
  </div>

  <div>
    <%= form.submit "Enviar", class: 'btn btn-primary', data: { disable_with: 'Enviando...' } %>
  </div>

<% end %>
