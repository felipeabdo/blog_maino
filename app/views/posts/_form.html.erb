<%= form_with(model: post) do |form| %>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <em>Por <%= post.user.username %></em>
  </div>

  <div class="form-group">
    <%= form.label :title, t('activerecord.attributes.post.title'), style: "display: block" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>


  <div class="form-group mb-4">
    <%= form.label :body, t('activerecord.attributes.post.body'), style: "display: block" %>
    <%= form.text_area :body, class: 'form-control', rows: 15 %>
  </div>

  <div>
    <%= form.submit "Enviar", class: 'btn btn-primary', data: { disable_with: 'Enviando...' } %>
  </div>

<% end %>
