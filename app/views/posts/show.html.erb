<p style="color: green"><%= notice %></p>


<%= image_tag @post.image if @post.image.attached? %>
<%= render @post %>

<div class="m-5">
  <div class="text-center">
    <h4> 
      <%= pluralize(@post.comments.count, 'Comentário') %>

      <% if @post.comments.count == 0 %>
        <span class="badge" style="background: green">Seja o primeiro a comentar</span>
      <% end %>
    </h4>
  </div>

  <div class="shadow-sm m-3 p-3 bg-light rounded">

    <%= form_with model: @comment, local: true do |form| %>

      <%= form.hidden_field :post_id, value: @post.id %>

      <div class="form-group">
        <%= form.label :author, t('activerecord.attributes.comment.author'), style: "display: block" %>
        <%= form.text_field :author, class: 'form-control' %>
      </div>

      <div class="form-group mb-4">
        <%= form.label :body, t('activerecord.attributes.comment.body'), style: "display: block" %>
        <%= form.text_area :body, class: 'form-control', rows: 3 %>
      </div>

      <div>
        <%= form.submit "Enviar", class: 'btn btn-primary', data: { disable_with: 'Comenntando...' } %>
      </div>

    <% end %>

  </div>

  <% @comments.each do |comment| %>

    <div class="shadow-sm m-3 p-3 bg-light rounded">
      <div class="row">
        <div class="col">
          <strong><%= comment.author %></strong>
        </div>
        <div class="col text-end">
          <em data-bs-toggle="tooltip" data-bs-placement="top" title="<%= l comment.created_at, format: :long %>"> 
            <%= time_ago_in_words comment.created_at %> atrás
          </em>
        </div>
      </div>

      <hr>

      <%= sanitize (comment.body.gsub("\n", "<br>")).html_safe %>

    </div>

  <% end %>


</div>

<div>
  <%
=begin%>
 <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %> 
<%
=end%>
  
</div>
